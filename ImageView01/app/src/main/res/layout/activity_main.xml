<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.palmdigital.imageview01.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:text="Top Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="153dp"
        android:layout_height="85dp"
        app:srcCompat="@drawable/right_arrow"
        android:id="@+id/imageView2" />

    <TextView
        android:text="Top Middle Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <ImageView
        android:layout_width="81dp"
        android:layout_height="134dp"
        app:srcCompat="@drawable/stop_sign"
        android:id="@+id/imageView3" />

    <TextView
        android:text="Second Middle Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <ImageView
        android:layout_width="148dp"
        android:layout_height="82dp"
        app:srcCompat="@drawable/android"
        android:id="@+id/imageView4" />

    <TextView
        android:text="Bottom Picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        app:srcCompat="@drawable/left_arrow"
        android:id="@+id/imageView5"
        android:layout_weight="0.58" />
</LinearLayout>
