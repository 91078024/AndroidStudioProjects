<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.palmdigital.textview_output_01.MainActivity"
    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="0.08" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_weight="0.04"
        android:textAlignment="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/number1"
            android:id="@+id/imageView" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/number2"
            android:id="@+id/imageView2" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/number3"
            android:id="@+id/imageView3" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:srcCompat="@drawable/plus"
        android:id="@+id/imageView_plus"
        android:layout_margin="20sp"
        android:layout_marginBottom="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textView2"
        android:textSize="30sp"
        android:textAlignment="center" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="0.08" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_weight="0.15"
        android:textAlignment="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/number4"
            android:id="@+id/imageView5" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/number5"
            android:id="@+id/imageView6" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/number6"
            android:id="@+id/imageView7" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        app:srcCompat="@drawable/equal_sign"
        android:id="@+id/imageView_equal"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/textView3"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

</LinearLayout>
